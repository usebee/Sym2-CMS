{% extends 'CMSAdminBundle::layout.html.twig' %}

{% block body %}
<div class="span6" style="margin: 0 auto; float: none">
    {% for gkey, group in groups %}
        {% if group|length > 0 %}
    <table class="table table-bordered table-striped sonata-ba-list">
        <thead>
            <tr>
                <th colspan="3">{{ gkey }}</th>
            </tr>
        </thead>
        <tbody>
            {% for item in group %}
            <tr>
                <td>{{ item.label|trans({}, 'CMSAdminBundle') }}</td>
                <td style="width: 25%; text-align: center;">
                    <a class="btn" href="{{ path(item.action[0]) }}">
                        <i class="icon-plus"></i> {{ 'Add new'|trans({}, 'CMSAdminBundle') }}
                    </a>
                </td>
                <td style="width: 20%; text-align: center;">
                    <a class="btn" href="{{ path(item.action[1]) }}">
                        <i class="icon-list"></i> {{ 'List'|trans({}, 'CMSAdminBundle') }}
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
        {% endif %}
    {% endfor %}
</div>
{% endblock body %}