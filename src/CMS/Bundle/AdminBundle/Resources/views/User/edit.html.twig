{% extends 'CMSAdminBundle::layout.html.twig' %}
{% block body %}
<h1>User edit</h1>

<form action="{{ path('admin_user_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit" class="btn btn-primary">Edit</button>
    </p>
</form>

<p>
    <form action="{{ path('admin_user_delete', { 'id': entity.id }) }}" method="post">
        <a class="btn" href="{{ path('admin_user') }}">
            Back to the list
        </a>
        <button class="btn btn-danger" type="submit">Delete</button>
    </form>
</p>
{% endblock %}