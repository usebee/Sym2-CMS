{% extends 'CMSAdminBundle::admin.html.twig' %}
{% block body %}
<h1>Media edit</h1>

<form action="{{ path('admin_media_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} class="form-horizontal">
    <fieldset>
        <div class="control-group">
            <label class="control-label" for="input01">{{ form_label(edit_form.category) }}</label>
            <div class="controls">
                {{ form_errors(edit_form.category) }}
                {{ form_widget(edit_form.category) }}
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="input01">Image</label>
            <div class="controls">
                <image src="/uploads/{{ entity.name}}" width="100px" height="100px"/>
                <div style="display: none;">
                    {{ form_widget(edit_form.name) }}
                </div>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="input01">{{ form_label(edit_form.file) }}</label>
            <div class="controls">
                {{ form_errors(edit_form.file) }}
                {{ form_widget(edit_form.file) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="input01">{{ form_label(edit_form.width) }}</label>
            <div class="controls">
                {{ form_errors(edit_form.width) }}
                {{ form_widget(edit_form.width) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="input01">{{ form_label(edit_form.height) }}</label>
            <div class="controls">
                {{ form_errors(edit_form.height) }}
                {{ form_widget(edit_form.height) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="optionsCheckbox">{{ form_label(edit_form.active) }}</label>
            <div class="controls">
              <label class="checkbox">
                    {{ form_errors(edit_form.active) }}
                    {{ form_widget(edit_form.active) }}
              </label>
            </div>
        </div>

        <div class="form-actions">
            {{ form_row(edit_form._token) }}
            <button type="submit" class="btn btn-primary">Save changes</button>
            <a href="{{ path('admin_media', {'page' : 1}) }}" class="btn">Back To List</a>
        </div>

    </fieldset>
</form>

{% endblock %}