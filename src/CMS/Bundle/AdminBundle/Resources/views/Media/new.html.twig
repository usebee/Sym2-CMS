{% extends 'CMSAdminBundle::admin.html.twig' %}
{% block body %}
<h1>Media creation</h1>

<form action="{{ path('admin_media_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
    <fieldset>
        <div class="control-group">
            <label class="control-label" for="input01">{{ form_label(form.category) }}</label>
            <div class="controls">
                {{ form_errors(form.category) }}
                {{ form_widget(form.category) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="input01">{{ form_label(form.file) }}</label>
            <div class="controls">
                {{ form_errors(form.file) }}
                {{ form_widget(form.file) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="input01">{{ form_label(form.width) }}</label>
            <div class="controls">
                {{ form_errors(form.width) }}
                {{ form_widget(form.width) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="input01">{{ form_label(form.height) }}</label>
            <div class="controls">
                {{ form_errors(form.height) }}
                {{ form_widget(form.height) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="optionsCheckbox">{{ form_label(form.active) }}</label>
            <div class="controls">
              <label class="checkbox">
                    {{ form_errors(form.active) }}
                    {{ form_widget(form.active) }}
              </label>
            </div>
        </div>

        <div class="form-actions">
            {{ form_row(form._token) }}
            <button type="submit" class="btn btn-primary">Save changes</button>
            <a href="{{ path('admin_media', {'page' : 1}) }}" class="btn">Back To List</a>
        </div>

    </fieldset>
</form>

{% endblock %}