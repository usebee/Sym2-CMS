{% extends 'CMSAdminBundle::admin.html.twig' %}
{% block body %}
<h1>Media</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Media category </th>
            <td>
                {% if entity.category %}
                    {{ entity.category.name }}
                {% endif%}
            </td>
        </tr>
        <tr>
            <th>Width</th>
            <td>{{ entity.width }}</td>
        </tr>
        <tr>
            <th>Height</th>
            <td>{{ entity.height }}</td>
        </tr>
        <tr>
            <th>Created_at</th>
            <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Updated_at</th>
            <td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Active</th>
            <td>
                {% if entity.active == 1 %}
                    <input type="checkbox" checked="checked" class="defaultCheckBox" disabled="true"/>
                {% else %}
                    <input type="checkbox" class="defaultCheckBox" disabled="true"/>
                {% endif%}
            </td>
        </tr>
        <tr>
            <td colspan="2" width="100%">
                <a href="{{ path('admin_media', {'page' : 1}) }}" class="btn">Back To List</a>
                &nbsp;
                <a href="{{ path('admin_media_edit', { 'id': entity.id }) }}" class="btn">Edit</a>
            </td>
        </tr>
    </tbody>
</table>
{% endblock %}